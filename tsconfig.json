{
    "extends": "@vue/tsconfig/tsconfig.dom",
    "include": [
        "src/**/*",
        "src/**/*.vue",
        "env.d.ts",
        "eslint.config.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "allowJs": true,
        // "checkJs": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true
    }
}